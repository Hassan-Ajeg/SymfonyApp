{% extends 'base.html.twig' %}

{% block title %}Ajouter une catégorie
{% endblock %}

{% block body %}
	<h1>Ajouter une catégorie</h1>


	{{ form_start( formView ) }}
	{{ form_errors( formView ) }}

	<div class="row">
		<div class="col">
			{{ form_row( formView.name ) }}
		</div>
		<button class="btn btn-primary mt-3 btn-block">
			<i class="fas fa-save"></i>
			Créer la catégorie
		</button>
	</div>
	{{ form_end( formView ) }}

{% endblock %}
